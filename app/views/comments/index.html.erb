<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><%= @comments_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t('.id') %></div></th>
            <th><div><%= t('.user_id') %></div></th>
            <th><div><%= t('.email') %></div></th>
            <th><div><%= t('.app_name') %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @comments.each do |comment| %>
                <% @model = comment %>
                <tr>
                  <%if can? :show, Comment %>                  
                    <td><%=link_to comment.id, comment, :class => 'btn btn-mini btn-blue'%></td>
                  <%else%>
                    <td><%= label comment.id, comment.id, :class => 'btn btn-mini btn-blue'%></td>
                  <%end%>
                  <td><%= comment.user.fullname %></td>

                  <td><%= comment.email %></td>

                  <td><%= comment.app_name %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>

