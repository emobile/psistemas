<div class="row">
  <div class="col-md-12">

    <div class="box">
      <div class="box-header">
        <span class="title"><%= t("actions.#{controller.action_name}",  model: controller.action_name, model: t("activerecord.models.#{controller_name.singularize}")) %></span>
      </div>

      <div class="box-content">

        <%= form_for @comment, :html => {:class => "fill-up", :id => "fill-up"} do |f| %>
          <% if @comment.errors.any? %>
            <div id="error_explanation">
              <% if @comment.errors.count == 1 %>
                <h2><%= t('activerecord.errors.template.header.one', model: t("activerecord.models.#{controller_name.singularize.gsub(" ", "")}")) %></h2>
              <% else %>
                <h2><%= t('activerecord.errors.template.header.other', model: t("activerecord.models.#{controller_name.singularize.gsub(" ", "")}"), :count => @comment.errors.count) %></h2>
              <% end %>
              <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-lg-6">

              <ul class="padded separate-sections">

                <div class="field">
                  <%= f.label :user_id %><br>
                  <%= f.text_field :user_id, :value => current_user.fullname, :readonly => true  %>
                  <%= f.hidden_field :user_id, :value => current_user.id, :readonly => true  %>
                </div>
                <div class="field">
                  <%= f.label :email %><br>
                  <%= f.text_field :email, :value => current_user.email, :readonly => true %>
                </div>
                <div class="field">
                  <%= f.label :comment %><br>
                  <%= f.text_area :comment %>
                </div>
                <div class="field">
                  <%= f.hidden_field :app_name, :value => Rails.application.class.parent_name.titlecase, :readonly => true %>
                  <%= f.hidden_field :branch_id, :value => current_user.branch_id, :readonly => true  %>
                  <%= f.hidden_field :company_id, :value => current_user.company_id, :readonly => true  %>
                </div>
              </ul>
            </div>

            <div class="col-lg-6" style="margin-top: 40px; margin-right: 0px">
              <div class="box">
                <div class="box-header">
                  <ul class="nav nav-tabs nav-tabs-left">
                    <li class="active"><a href="#home" data-toggle="tab"><i class="icon-info-sign"></i></a></li>
                  </ul>
                  <div class="title"><%=t('layouts.application.contact_info')%></div>
                </div>

                <div class="box-content">
                  <div class="tab-content">
                    <div class="tab-pane active" id="home">
                      <ul class="box-list">
                        <li>
                          <span><strong><%= t('layouts.application.admin') %></strong><%= "Alejandro Ballesteros" %></span>
                        </li>
                        <li>
                          <span><strong><%= t('layouts.application.phone1') %></strong><%= "(614) 481-3115" %></span>
                        </li>
                        <li>
                          <span><strong><%= t('layouts.application.email1') %></strong><%= "webmaster@emobile-demos.com.mx" %></span>
                        </li>
                      </ul>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-actions">
            <%=f.button  :class=>"btn btn-blue", :title => t("actions.form_#{action_name}",  model: t("activerecord.models.#{controller_name.singularize}")) do%>
              <i class="icon-circle-arrow-up"></i> <%= t("actions.form_#{action_name}",  model: t("activerecord.models.#{controller_name.singularize}")) %>
            <%end%>
            <%= render "layouts/action_links" %>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>
