<div class="row">
  <div class="col-md-12">

    <div class="box">
      <div class="box-header">
        <span class="title"><%= t("actions.#{controller.action_name}",  model: controller.action_name, model: t("activerecord.models.#{controller_name.singularize}")) %></span>
        <ul class="box-toolbar">          
          <li class="toolbar-link">
          <li><%=link_to  "#", :title => t("layouts.application.form_reset"), :onclick => "formReset($('#fill-up'));" do%>
              <i class="icon-refresh"></i>
            <%end%>
          </li>
        </ul>
      </div>

      <div class="box-content">

        <%= form_for(@subfamily, :html => {:class => "fill-up", :id => "fill-up"}) do |f| %>
          <% if @subfamily.errors.any? %>
            <div id="error_explanation">
              <% if @subfamily.errors.count == 1 %>
                <h2><%= t('activerecord.errors.template.header.one', model: t("activerecord.models.#{controller_name.singularize.gsub(" ", "")}")) %></h2>
              <% else %>
                <h2><%= t('activerecord.errors.template.header.other', model: t("activerecord.models.#{controller_name.singularize.gsub(" ", "")}"), :count => @subfamily.errors.count) %></h2>
              <% end %>
              <ul>
                <% @subfamily.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-lg-6">
              <ul class="padded separate-sections">
                <li class="field">
                  <%= f.label :name %>
                  <%= f.text_field :name, :required => true, :placeholder => t(:required) %>
                </li>
                <li class="field">
                  <%= f.label :description %>
                  <%= f.text_area :description, :required => true, :placeholder => t(:required) %>
                </li>
                <li class="field">
                  <%= f.label :family %>
                  <%= f.text_field :family, :required => true, :placeholder => t(:required) %>
                </li>
                <%if current_user.role.super_admin %>
                  <li class="field">
                    <%= f.label :company_id %>
                    <%= f.collection_select(:company_id, @companies, :id, :name, {}, { :class => 'chzn-select' }) %>
                  </li>
                  <li class="field">
                    <%= f.label :branch_id %>
                    <%= f.collection_select(:branch_id, @branches, :id, :name, {:prompt => true}, { :class => 'chzn-select' }) %>
                  </li>
                <%elsif current_user.role.company_admin%>
                  <%= f.hidden_field :company_id, :value => current_user.company_id, :readonly => true %>
                  <li class="field">
                    <%= f.label :branch_id %>
                    <%= f.collection_select(:branch_id, @branches, :id, :name, {:prompt => true}, { :class => 'chzn-select' }) %>
                  </li>
                <%else%>
                  <%= f.hidden_field :company_id, :value => current_user.company_id, :readonly => true %>
                  <%= f.hidden_field :branch_id, :value => current_user.branch_id, :readonly => true %>
                <%end%>
                <li class="field">
                  <%= f.label :client_id %>
                  <%= f.text_field :client_id, :required => true, :placeholder => t(:required) %>
                </li>
                <li class="field">
                  <%= f.label :client_branch_id %>
                  <%= f.text_field :client_branch_id, :required => true, :placeholder => t(:required) %>
                </li>
              </ul>
            </div>

            <div class="col-lg-6">
              <ul class="padded separate-sections">
              </ul>
            </div>
          </div>

          <div class="form-actions">
            <%=f.button  :class=>"btn btn-blue", :title => t("actions.form_#{action_name}",  model: t("activerecord.models.#{controller_name.singularize}")) do%>
              <i class="icon-circle-arrow-up"></i> <%= t("actions.form_#{action_name}",  model: t("activerecord.models.#{controller_name.singularize}")) %>
            <%end%>
            <%= render "layouts/action_links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
