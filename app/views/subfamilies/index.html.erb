<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @subfamilies_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
            <th><div><%= t'.name' %></div></th>
            <th><div><%= t'.family_id' %></div></th>
            <th><div><%= t'.company_id' %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @subfamilies.each do |subfamily| %>
                <% @model = subfamily %> 
                <tr>
                  <%if can? :show, Subfamily %>
                    <td><%=link_to subfamily.id, subfamily, :class => 'btn btn-mini btn-blue'%></td>
                  <%else%>
                    <td><%= label subfamily.id, subfamily.id, :class => 'btn btn-mini btn-blue'%></td>
                  <%end%>
                  <td><%= subfamily.name %></td>
                  <td><%= subfamily.family.name %></td>
                  <td><%= subfamily.company.name %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
