<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <ul class="nav nav-tabs nav-tabs-left">
          <li class="active"><a href="#home" data-toggle="tab"><i class="icon-home"></i></a></li>
          <li><a href="#description" data-toggle="tab"><i class="icon-info-sign"></i> <span><%=t('layouts.application.description')%></span></a></li>
        </ul>
        <div class="title"><%= @subfamily.name %></div>
      </div>

      <div class="box-content">
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <ul class="box-list">
              <li>
                <span><strong><%= t'.family_id' %></strong> <%= @subfamily.family.name %></span>
              </li>
              <li>
                <span><strong><%= t'.name' %></strong> <%= @subfamily.name %></span>
              </li>
              <li>
                <span><strong><%= t'.company_id' %></strong> <%= @subfamily.company.name %></span>
              </li>
              <li>
                <span><strong><%= t('.created_at') %></strong><%=  I18n.l @subfamily.created_at, :format => :long if @subfamily.created_at%></span>
              </li>
              <li>
                <span><strong><%= t('.updated_at') %></strong><%= I18n.l @subfamily.updated_at, :format => :long if  @subfamily.updated_at%></span>
              </li>
            </ul>
          </div>
          <div class="tab-pane" id="description">
            <ul class="box-list">
              <li>
                <span><%= @subfamily.description %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="box-footer padded">
        <span class="pull-right">
          <%= render "layouts/action_links" %>
        </span>
      </div>
    </div>
  </div>
</div>
