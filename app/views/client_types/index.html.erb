<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @client_types_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
            <th><div><%= t'.name' %></div></th>
            <th><div><%= t'.description' %></div></th>
            <th><div><%= t'.company_id' %></div></th>
            <th><div><%= t'.branch_id' %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @client_types.each do |client_type| %>
                <% @model = client_type %> 
                <tr>
                  <%if can? :show, ClientType %>
                    <td><%=link_to client_type.id, client_type, :class => 'btn btn-mini btn-blue'%></td>
                  <%else%>
                    <td><%= label client_type.id, client_type.id, :class => 'btn btn-mini btn-blue'%></td>
                  <%end%>
                  <td><%= client_type.name %></td>
                  <td><%= client_type.description %></td>
                  <td><%= client_type.company.name if client_type.company %></td>
                  <td><%= client_type.branch.name if client_type.branch %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
