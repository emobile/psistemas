<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th><%= t'.id' %></th>
      <th><%= t'.name' %></th>
      <th><%= t'.email1' %></th>
      <th><%= t'.webpage' %></th>
      <th><%= t'.phone1' %></th>
      <th><%= t'.city' %></th>
      <th><%= t'.state' %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <% @model = company %> 
      <tr>
        <%if can? :show, Company %>
          <td><%=link_to company.id, company, :class => 'button'%></td>
        <%else%>
          <td><%= label company.id, company.id, :class => 'button'%></td>
        <%end%>            

        <td><%= company.name %></td>        

        <td><%= company.email1 %></td>                

        <td><%= company.webpage %></td>

        <td><%= number_to_phone(company.phone1, area_code: true)  %></td>

        <td><%= company.city %></td>

        <td><%= company.state %></td>

        <%= render "layouts/index_links" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render "layouts/action_links" %>
