<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <ul class="nav nav-tabs nav-tabs-left">
          <li class="active"><a href="#home" data-toggle="tab"><i class="icon-home"></i></a></li>
          <li><a href="#description" data-toggle="tab"><i class="icon-info-sign"></i> <span><%=t('layouts.application.description')%></span></a></li>
        </ul>
        <div class="title"><%= @price.product.name if @price.product %></div>
      </div>

      <div class="box-content">
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <ul class="box-list">
              <li>
                <span><strong><%= t'.price' %></strong> <%= @price.price_with_unit %></span>
              </li>
              <li>
                <span><strong><%= t'.company_id' %></strong> <%= @price.company.name if @price.company %></span>
              </li>
              <li>
                <span><strong><%= t'.branch_id' %></strong> <%= @price.branch.name if @price.branch %></span>
              </li>
              <li>
                <span><strong><%= t'.product_id' %></strong> <%= @price.product.name if @price.product %></span>
              </li>
              <li>
                <span><strong><%= t'.client_type_id' %></strong> <%= @price.client_type.name if @price.client_type %></span>
              </li>
            </ul>
          </div>
          <div class="tab-pane" id="description">
            <ul class="box-list">
              <li>
                <span><%= @price.description %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="box-footer padded">
        <span class="pull-right">
          <%= render "layouts/action_links" %>
        </span>
      </div>
    </div>
  </div>
</div>
