<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @statuses_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
                          <th><div><%= t'.name' %></div></th>
                          <th><div><%= t'.description' %></div></th>
                          <th><div><%= t'.hierarchy' %></div></th>
                          <th><div><%= t'.model_name' %></div></th>
                        <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @statuses.each do |status| %>
              <% @model = status %> 
              <tr>
                <%if can? :show, Status %>
                <td><%=link_to status.id, status, :class => 'btn btn-mini btn-blue'%></td>
                <%else%>
                <td><%= label status.id, status.id, :class => 'btn btn-mini btn-blue'%></td>
                <%end%>
                                  <td><%= status.name %></td>
                                  <td><%= status.description %></td>
                                  <td><%= status.hierarchy %></td>
                                  <td><%= status.model_name %></td>
                                <td><%= render "layouts/index_links" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
