<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><%= @error_reports.count%></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t('.id') %></div></th>
            <th><div><%= t('.user_id') %></div></th>
            <th><div><%= t('.controller_name') %></div></th>
            <th><div><%= t('.action_name') %></div></th>
            <th><div><%= t('.line_number') %></div></th>
            <th><div><%= t('.referrer_url') %></div></th>
            <th><div><%= t('.original_path') %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @error_reports.each do |error_report| %>
                <% @model = error_report %> 
                <tr>
                  <%if can? :show, ErrorReport %>                  
                    <td><button class="btn btn-mini btn-blue"><%=link_to error_report.id, error_report, :class => 'button'%></button></td>
                  <%else%>
                    <td><button class="btn btn-mini btn-blue"><%= label error_report.id, error_report.id, :class => 'button'%></button></td>
                    <%end%>
                  <td><%= error_report.user.fullname %></td>

                  <td><%= error_report.controller_name %></td>

                  <td><%= error_report.action_name %></td>

                  <td><%= error_report.line_number %></td>

                  <td><%= error_report.referrer_url %></td>

                  <td><%= error_report.original_path %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/action_links" %>
