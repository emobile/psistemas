<div class="row">
  <div class="col-md-12">

    <div class="box">
      <div class="box-header">
        <span class="title"><%= t("actions.#{controller.action_name}",  model: controller.action_name, model: t("activerecord.models.#{controller_name.singularize}")) %></span>
        <ul class="box-toolbar">          
          <li class="toolbar-link">
          <li><%=link_to  "#", :title => t("layouts.application.form_reset"), :onclick => "formReset($('#fill-up'));" do%>
              <i class="icon-refresh"></i>
            <%end%>
          </li>
          </li>
        </ul>
      </div>

      <div class="box-content">

        <%= form_for @role, :html => {:class => "fill-up", :id => "fill-up"} do |f| %>
          <% if @role.errors.any? %>
            <div id="error_explanation">
              <% if @role.errors.count == 1 %>
                <h2><%= t('activerecord.errors.template.header.one', model: t("activerecord.models.#{controller_name.singularize.gsub(" ", "")}")) %></h2>
              <% else %>
                <h2><%= t('activerecord.errors.template.header.other', model: t("activerecord.models.#{controller_name.singularize.gsub(" ", "")}"), :count => @role.errors.count) %></h2>
              <% end %>
              <ul>
                <% @role.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-lg-6">

              <ul class="padded separate-sections">

                <li class="field">
                  <%= f.label :name %>
                  <%= f.text_field :name, :required => true, :placeholder => t(:required) %>
                </li>
                <li class="field">
                  <%= f.label :description %>
                  <%= f.text_area :description, :rows=>"12", :required => true, :placeholder => t(:required) %>
                </li>

              </ul>
            </div>

            <div class="col-lg-6">

              <ul class="padded separate-sections">
                <li class="field">
                  <%= f.check_box :protected, :class=>"icheck" %>
                  <%= f.label :protected %>
                </li>
                <li class="field">
                  <%= f.check_box :super_admin, :class=>"icheck" %>
                  <%= f.label :super_admin %>
                </li>
                <li class="field">
                  <%= f.check_box :company_admin, :class=>"icheck" %>
                  <%= f.label :company_admin %>
                </li>
                <li class="field">
                  <%= f.check_box :branch_admin, :class=>"icheck" %>
                  <%= f.label :branch_admin %>
                </li>
                <li class="field">
                  <%= f.check_box :super_manager, :class=>"icheck" %>
                  <%= f.label :super_manager %>
                </li>
                <li class="field">
                  <%= f.check_box :manager, :class=>"icheck" %>
                  <%= f.label :manager %>
                </li>
                <li class="field">
                  <%= f.check_box :routes_admin, :class=>"icheck" %>
                  <%= f.label :routes_admin %>
                </li>
                <li class="field">
                  <%= f.check_box :seller, :class=>"icheck" %>
                  <%= f.label :seller %>
                </li>
                <li class="field">
                  <%= f.check_box :secretary, :class=>"icheck" %>
                  <%= f.label :secretary %>
                </li>
                <li class="field">
                  <%= f.check_box :driver, :class=>"icheck" %>
                  <%= f.label :driver %>
                </li>
                <li class="field">
                  <%= f.check_box :client, :class=>"icheck" %>
                  <%= f.label :client %>
                </li>
                <li class="field">
                  <%= f.check_box :guess, :class=>"icheck" %>
                  <%= f.label :guess %>
                </li>
                <li class="field">
                  <%= f.check_box :other, :class=>"icheck" %>
                  <%= f.label :other %>
                </li>
              </ul>
            </div>
          </div>
          <div class="form-actions">
            <%=f.button  :class=>"btn btn-blue", :title => t("actions.form_#{action_name}",  model: t("activerecord.models.#{controller_name.singularize}")) do%>
              <i class="icon-circle-arrow-up"></i> <%= t("actions.form_#{action_name}",  model: t("activerecord.models.#{controller_name.singularize}")) %>
            <%end%>
            <%= render "layouts/action_links" %>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>