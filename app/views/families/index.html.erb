<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @families_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
                          <th><div><%= t'.name' %></div></th>
                          <th><div><%= t'.description' %></div></th>
                          <th><div><%= t'.company_id' %></div></th>
                          <th><div><%= t'.branch_id' %></div></th>
                          <th><div><%= t'.client_id' %></div></th>
                          <th><div><%= t'.client__branch_id' %></div></th>
                        <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @families.each do |family| %>
              <% @model = family %> 
              <tr>
                <%if can? :show, Family %>
                <td><%=link_to family.id, family, :class => 'btn btn-mini btn-blue'%></td>
                <%else%>
                <td><%= label family.id, family.id, :class => 'btn btn-mini btn-blue'%></td>
                <%end%>
                                  <td><%= family.name %></td>
                                  <td><%= family.description %></td>
                                  <td><%= family.company %></td>
                                  <td><%= family.branch %></td>
                                  <td><%= family.client %></td>
                                  <td><%= family.client_branch %></td>
                                <td><%= render "layouts/index_links" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
