<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <ul class="nav nav-tabs nav-tabs-left">
          <li class="active"><a href="#home" data-toggle="tab"><i class="icon-home"></i></a></li>
        </ul>
        <div class="title"><%= "MODEL" %></div>
      </div>

      <div class="box-content">
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <ul class="box-list">
              <li>
                <span><strong><%= t'.name' %></strong> <%= @product.name %></span>
              </li>
              <li>
                <span><strong><%= t'.description' %></strong> <%= @product.description %></span>
              </li>
              <li>
                <span><strong><%= t'.company_id' %></strong> <%= @product.company.name if @product.company %></span>
              </li>
              <li>
                <span><strong><%= t'.branch_id' %></strong> <%= @product.branch.name if @product.branch %></span>
              </li>
              <li>
                <span><strong><%= t'.storage_id' %></strong> <%= @product.storage.name if @product.storage %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="box-footer padded">
        <span class="pull-right">
          <%= render "layouts/action_links" %>
        </span>
      </div>
    </div>
  </div>
</div>
