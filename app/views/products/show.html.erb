<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <ul class="nav nav-tabs nav-tabs-left">
          <li class="active"><a href="#home" data-toggle="tab"><i class="icon-home"></i></a></li>
          <li><a href="#description" data-toggle="tab"><i class="icon-info-sign"></i> <span><%=t('layouts.application.description')%></span></a></li>
          <li><a href="#prices" data-toggle="tab"><i class="icon-shopping-cart"></i> <span><%=t('layouts.application.prices')%></span></a></li>
        </ul>
        <div class="title"><%= @product.name %></div>
      </div>

      <div class="box-content">
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <ul class="box-list">
              <li>
                <span><strong><%= t'.name' %></strong> <%= @product.name %></span>
              </li>
              <li>
                <span><strong><%= t'.family_id' %></strong> <%= @product.family.name if @product.family %></span>
              </li>
              <li>
                <span><strong><%= t'.subfamily_id' %></strong> <%= @product.subfamily.name if @product.subfamily %></span>
              </li>
            </ul>
          </div>
          <div class="tab-pane" id="description">
            <ul class="box-list">
              <li>
                <span><%= @product.description %></span>
              </li>
            </ul>
          </div>
          <div class="tab-pane" id="prices">
            <ul class="box-list">
              <%@product.prices.each do |price|%>
                <li>
                  <span><strong><%= t'prices.show.branch_id' %></strong> <%= price.branch.name %></span> <br>
                  <span><strong><%= t'prices.show.client_type_id' %></strong> <%= price.client_type.name %>.</span>
                  <span><strong style="color: red;"><%= t'prices.show.price' %></strong> <%= price.price_with_unit %></span>
                </li>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
      <div class="box-footer padded">
        <span class="pull-right">
          <%= render "layouts/action_links" %>
        </span>
      </div>
    </div>
  </div>
</div>
