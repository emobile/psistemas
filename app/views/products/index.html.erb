<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @products_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
            <th><div><%= t'.name' %></div></th>
            <th><div><%= t'.company_id' %></div></th>
            <th><div><%= t'.branch_id' %></div></th>
            <th><div><%= t'.storage_id' %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <% @model = product %> 
                <tr>
                  <%if can? :show, Product %>
                    <td><%=link_to product.id, product, :class => 'btn btn-mini btn-blue'%></td>
                  <%else%>
                    <td><%= label product.id, product.id, :class => 'btn btn-mini btn-blue'%></td>
                  <%end%>
                  <td><%= product.name %></td>
                  <td><%= product.company.name if product.company %></td>
                  <td><%= product.branch.name if product.branch %></td>
                  <td><%= product.storage.name if product.storage %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
