<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="login box" style="margin-top: 80px;">

    <div class="box-header">
      <span class="title"><%= t('devise.passwords.change_your') %></span>
    </div>

    <%= f.hidden_field :reset_password_token %>
    <div class="box-content padded">
      <div class="input-group addon-left">
        <span class="input-group-addon" href="#">
          <i class="icon-key"></i>
        </span>
        <%= f.password_field :password, :placeholder => t('devise.passwords.new'), :autocomplete=>"off" , :autofocus => true %>
      </div>
      <br />

      <div class="input-group addon-left">
        <span class="input-group-addon" href="#">
          <i class="icon-key"></i>
        </span>
        <%= f.password_field :password_confirmation, :placeholder => t('devise.passwords.confirm'), :autocomplete=>"off" %>
      </div>
      <br />

      <br>
      <%= button_tag(:type => 'submit', :class => 'btn btn-blue btn-block') do %>
        <%= t('devise.passwords.change_my') %> <i class="icon-signin"></i>
      <% end %>

      <br>
      <div>
        <a data-toggle="modal" href="#modal-simple"><%=t('devise.links.access_links')%></a>
      </div>
    </div>
  </div>
<% end %>
