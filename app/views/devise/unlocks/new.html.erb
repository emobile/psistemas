<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
<%= devise_error_messages! %>
<div class="login box" style="margin-top: 80px;">

  <div class="box-header">
    <span class="title"><%= t('devise.unlock.resend') %></span>
  </div>

  <div class="box-content padded">

    <div class="input-group addon-left">
      <span class="input-group-addon" href="#">
        <i class="icon-envelope"></i>
      </span>
      <%= f.email_field :email, :autofocus => true, :placeholder => t('devise.unlocks.email') %></div>
    <br />

    <br>
    <%= button_tag(:type => 'submit', :class => 'btn btn-blue btn-block') do %>
      <%= t(:send) %> <i class="icon-signin"></i>
    <% end %>
    <br>
    <div>
      <a data-toggle="modal" href="#modal-simple"><%=t('devise.links.access_links')%></a>
    </div>
  </div>
</div>
<% end %>