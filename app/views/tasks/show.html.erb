<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <ul class="nav nav-tabs nav-tabs-left">
          <li class="active"><a href="#home" data-toggle="tab"><i class="icon-home"></i></a></li>
        </ul>
        <div class="title"><%= "MODEL" %></div>
      </div>

      <div class="box-content">
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <ul class="box-list">
                              <li>
                  <span><strong><%= t'.name' %></strong> <%= @task.name %></span>
                </li>
                              <li>
                  <span><strong><%= t'.driver_id' %></strong> <%= @task.driver.driver_name %></span>
                </li>
                              <li>
                  <span><strong><%= t'.branch_id' %></strong> <%= @task.branch.name %></span>
                </li>
                              <li>
                  <span><strong><%= t'.company_id' %></strong> <%= @task.company.name %></span>
                </li>
                              <li>
                  <span><strong><%= t'.completed' %></strong> <%= @task.completed %></span>
                </li>
                              <li>
                  <span><strong><%= t'.priority' %></strong> <%= @task.priority %></span>
                </li>
                              <li>
                  <span><strong><%= t'.scheduled_date' %></strong> <%= @task.scheduled_date %></span>
                </li>
                              <li>
                  <span><strong><%= t'.latitude' %></strong> <%= @task.latitude %></span>
                </li>
                              <li>
                  <span><strong><%= t'.longitude' %></strong> <%= @task.longitude %></span>
                </li>
                              <li>
                  <span><strong><%= t'.description' %></strong> <%= @task.description %></span>
                </li>
                              <li>
                  <span><strong><%= t'.comments' %></strong> <%= @task.comments %></span>
                </li>
                              <li>
                  <span><strong><%= t'.completed_at' %></strong> <%= @task.completed_at %></span>
                </li>
                          </ul>
          </div>
        </div>
      </div>
      <div class="box-footer padded">
        <span class="pull-right">
          <%= render "layouts/action_links" %>
        </span>
      </div>
    </div>
  </div>
</div>
