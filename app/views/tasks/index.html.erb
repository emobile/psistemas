<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @tasks_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
            <th><div><%= t'.name' %></div></th>
            <th><div><%= t'.driver_id' %></div></th>
            <th><div><%= t'.branch_id' %></div></th>
            <th><div><%= t'.company_id' %></div></th>
            <th><div><%= t'.priority' %></div></th>
            <th><div><%= t'.scheduled_date' %></div></th>
            <th><div><%= t'.completed' %></div></th>
            <th><div><%= t'.completed_at' %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @tasks.each do |task| %>
                <% @model = task %> 
                <tr>
                  <%if can? :show, Task %>
                    <td><%=link_to task.id, task, :class => 'btn btn-mini btn-blue'%></td>
                  <%else%>
                    <td><%= label task.id, task.id, :class => 'btn btn-mini btn-blue'%></td>
                  <%end%>
                  <td><%= task.name %></td>
                  <td><%= task.driver %></td>
                  <td><%= task.branch.name %></td>
                  <td><%= task.company.name %></td>
                  <td><%= task.priority %></td>
                  <td><%= task.scheduled_date %></td>
                  <td><%= task.completed %></td>
                  <td><%= task.completed_at %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
