<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header"><span class="title"><%= t("activerecord.models.#{controller_name}") %></span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><% @measurement_units_count %></span></li>
        </ul>
      </div>
      <div class="box-content">
        <!-- find me in partials/data_tables_custom -->
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div><%= t'.id' %></div></th>
            <th><div><%= t'.name' %></div></th>
            <th><div><%= t'.description' %></div></th>
            <th><div><%= t'.company_id' %></div></th>
            <th><div><%= t'.branch_id' %></div></th>
            <th><div><%= t('layouts.application.actions') %></div></th>
            </tr>
            </thead>
            <tbody>
              <% @measurement_units.each do |measurement_unit| %>
                <% @model = measurement_unit %> 
                <tr>
                  <%if can? :show, MeasurementUnit %>
                    <td><%=link_to measurement_unit.id, measurement_unit, :class => 'btn btn-mini btn-blue'%></td>
                  <%else%>
                    <td><%= label measurement_unit.id, measurement_unit.id, :class => 'btn btn-mini btn-blue'%></td>
                  <%end%>
                  <td><%= measurement_unit.name %></td>
                  <td><%= measurement_unit.description %></td>
                  <td><%= measurement_unit.company.name if measurement_unit.company %></td>
                  <td><%= measurement_unit.branch.name if measurement_unit.branch %></td>
                  <td><%= render "layouts/index_links" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/action_links" %>
